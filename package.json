{
  "name": "@deldev/capacitor-google-auth",
  "version": "1.0.0",
  "description": "Google Auth plugin for capacitor.",
  "main": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "scripts": {
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "xcodebuild -scheme Googleauth -destination generic/platform=iOS",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "lint": "npm run eslint && npm run prettier -- --check && npm run swiftlint -- lint",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write && npm run swiftlint -- --fix --format",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\" --plugin=prettier-plugin-java",
    "swiftlint": "node-swiftlint",
    "docgen": "docgen --api GoogleAuthPlugin --output-readme README.md --output-json dist/docs.json",
    "build": "npm run clean && npm run docgen && tsc && rollup -c rollup.config.mjs",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "author": "Deldev",
  "license": "MIT",
  "devDependencies": {
    "@capacitor/android": "^7.4.2",
    "@capacitor/cli": "^7.4.2",
    "@capacitor/core": "^7.4.2",
    "@capacitor/docgen": "^0.3.0",
    "@capacitor/ios": "^7.4.2",
    "@ionic/prettier-config": "^4.0.0",
    "@types/gapi": "0.0.47",
    "@types/gapi.auth2": "0.0.61",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "@capacitor/core": "^7.4.2"
  },
  "files": [
    "dist/",
    "ios/",
    "android/",
    "!android/src/androidTest",
    "!android/src/test",
    "DeldevCapacitorGoogleAuth.podspec"
  ],
  "keywords": [
    "capacitor",
    "plugin",
    "native",
    "google",
    "auth",
    "firebase",
    "angular",
    "vue",
    "react",
    "ionic"
  ],
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Deldev/CapacitorGoogleAuth"
  },
  "bugs": {
    "url": "https://github.com/Deldev/CapacitorGoogleAuth/issues"
  },
  "prettier": "@ionic/prettier-config"
}
